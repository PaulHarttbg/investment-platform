<!-- Investment Confirmation Modal -->
<div id="investmentModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Confirm Your Investment</h2>
            <span class="close-btn" id="closeModalBtn">&times;</span>
        </div>
        <div class="modal-body">
            <div class="investment-summary">
                <div class="summary-item">
                    <span>Package:</span>
                    <span id="modalPackageName">Starter Package</span>
                </div>
                <div class="summary-item">
                    <span>Annual Return:</span>
                    <span id="modalReturn">8%</span>
                </div>
                <div class="summary-item">
                    <span>Duration:</span>
                    <span id="modalDuration">3 months</span>
                </div>
            </div>
            <div class="form-group">
                <label for="modalInvestmentAmount">Investment Amount (USD)</label>
                <input type="number" id="modalInvestmentAmount" class="form-input" value="1000">
                <small>Min: $<span id="modalMinAmount">100</span>, Max: $<span id="modalMaxAmount">5,000</span></small>
            </div>
            <div class="investment-projection">
                <h4>Your Projection</h4>
                <div class="projection-item">
                    <span>Monthly Return:</span>
                    <span id="modalMonthlyReturn" class="value">$6.67</span>
                </div>
                <div class="projection-item">
                    <span>Total Profit:</span>
                    <span id="modalTotalProfit" class="value">$20.00</span>
                </div>
                <div class="projection-item total">
                    <span>Final Amount:</span>
                    <span id="modalFinalAmount" class="value">$1,020.00</span>
                </div>
            </div>
            <div class="form-group-checkbox">
                <input type="checkbox" id="agreeTerms">
                <label for="agreeTerms">I agree to the <a href="terms.html" target="_blank">Terms and Conditions</a>.</label>
            </div>
        </div>
        <div class="modal-footer">
            <button id="cancelInvestmentBtn" class="btn btn-secondary">Cancel</button>
            <button id="confirmInvestmentBtn" class="btn btn-primary">Confirm Investment</button>
        </div>
    </div>
</div>

